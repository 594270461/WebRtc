<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Sayranet.WebRTC.Mobile"
             x:Class="Sayranet.WebRTC.Mobile.MainPage">

    <StackLayout VerticalOptions="Center" Margin="5">
        <!-- Place new controls here -->
        <Label Text="Example of applications using SignalR and WebRTC (simple group chat)" 
               FontSize="Large"
           HorizontalOptions="Center"/>
        <Entry Placeholder="Enter group name" x:Name="groupNameInput" />
        <Button Text="Let's go" Clicked="Button_Clicked" />
        <local:WebRtcView HeightRequest="100" WidthRequest="100" />

    </StackLayout>

</ContentPage>
